{
  "ecmaFeatures":{
    "jsx": true,
    "spread": true,
    /*ES6/7 Syntax*/
    arrowFunctions: true,
    blockBindings: true,
    classes: true,
    destructuring: true,
    objectLiteralComputedProperties: true,
    objectLiteralShorthandMethods: true,
    objectLiteralShorthandProperties: true,
    restParams: true,
    templateStrings: true,
  },
  extends: "eslint:recommended",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    /** Disable some rules from eslint:recommend */
    'comma-dangle': 0,
    "no-console": 0,
    "no-underscore-dangle": 0,

    "no-alert": 2,
    "no-array-constructor": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-implied-eval": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-process-exit": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": 2,
    "no-with": 2,
    "camelcase": 2,
    "comma-spacing": 2,
    "dot-notation": 2,
    "key-spacing": 2,
    "new-cap": 2,
    "new-parens": 2,
    "semi": 2,
    "semi-spacing": 2,
    "space-return-throw-case": 2,
    "no-use-before-define": [2, "nofunc"],
    "eqeqeq": [2, "smart"],
    "valid-jsdoc": [2, {"requireReturn": false}],
    "complexity": [2, 10],
    "no-else-return": 2,
    "indent": [2, 4, {"SwitchCase": 1}],
    "no-lonely-if": 2,
    "no-multiple-empty-lines": [2, {"max": 2}],
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "callback-return": [2, ["callback", "cb", "finished"]],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-useless-call": 2,

    /*React syntax*/
    "react/jsx-boolean-value": [2, "never"],
    "react/jsx-no-undef": 1,
    "react/jsx-no-duplicate-props": [2, {"ignoreCase": false}],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 1,
    "react/no-unknown-property": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1
  },
  "plugins": [
    "react"
  ]
}
